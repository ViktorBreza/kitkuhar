# Кіт Кухар - Production Environment Configuration
# Copy this file to .env and fill in your secure values

# Database Configuration (Production with PostgreSQL)
POSTGRES_DB=kitkuhar
POSTGRES_USER=kitkuhar_user
POSTGRES_PASSWORD=your_very_secure_database_password_here_min_20_chars
DATABASE_URL=postgresql://kitkuhar_user:${POSTGRES_PASSWORD}@database:5432/kitkuhar

# Redis Configuration (for caching and rate limiting)
REDIS_PASSWORD=your_very_secure_redis_password_here_min_20_chars
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Backend Security (CRITICAL - Change these in production!)
SECRET_KEY=your_super_secret_jwt_key_must_be_at_least_32_characters_long_and_random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (Production URLs only!)
ALLOWED_ORIGINS=https://kitkuhar.com,https://www.kitkuhar.com
# For development add: http://localhost:3000,http://localhost:3333

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,mov,webm

# Production Settings
ENVIRONMENT=production
LOG_LEVEL=INFO

# Admin User (for initial setup - remove after first run)
ADMIN_EMAIL=admin@kitkuhar.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# SSL/HTTPS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration (optional)
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Email Configuration (for notifications - optional)
SMTP_HOST=your.smtp.server.com
SMTP_PORT=587
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_password