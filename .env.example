# Кіт Кухар - Environment Configuration Example
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./recipes.db
# For PostgreSQL: postgresql://username:password@localhost:5432/kitkuhar
# For MySQL: mysql://username:password@localhost:3306/kitkuhar

# Backend Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend API URL
REACT_APP_API_URL=http://localhost:8000

# CORS Configuration (comma-separated URLs)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov

# Server Configuration  
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development/Production Mode
ENVIRONMENT=development